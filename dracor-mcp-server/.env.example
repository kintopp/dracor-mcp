# DraCor MCP Server Configuration
# Copy this file to .env and modify as needed

# Transport mode: "stdio" (default for Claude Desktop) or "streamable-http" (for Railway)
TRANSPORT=stdio

# HTTP server settings (only used when TRANSPORT=streamable-http)
HOST=0.0.0.0
PORT=8000

# DraCor API endpoint
# Production: https://dracor.org/api/v1 (default)
# Staging: https://staging.dracor.org/api/v1
DRACOR_API_BASE_URL=https://dracor.org/api/v1

# CORS allowed origins (comma-separated, * for all)
ALLOWED_ORIGINS=*

# Logging level: debug, info, warning, error
LOG_LEVEL=info
